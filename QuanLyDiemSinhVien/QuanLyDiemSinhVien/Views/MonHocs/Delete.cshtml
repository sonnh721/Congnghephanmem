@model QuanLyDiemSinhVien.Models.MonHoc

@{
    ViewBag.Title = "Xóa môn học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Xóa môn học
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="/Khoas">Danh mục môn học</a></li>
        <li class="active">Xóa môn học</li>
    </ol>
</section>
<hr />

<section class="content">
    <div class="text-center">
        <h3>Bạn chắc chắn muốn xóa môn học này?</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn bg-maroon" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn bg-purple margin" })
            </div>
        }
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <!-- The time line -->
            <ul class="timeline">
                <!-- timeline item -->
                <li>
                    <!-- timeline icon -->
                    <i class="fa fa-info-circle bg-blue"></i>
                    <div class="timeline-item">
                        @*<span class="time"><i class="fa fa-clock-o"></i> 12:05</span>*@
                        <h3 class="timeline-header"><a href="#">Thông tin môn học</a></h3>

                        <div class="timeline-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-horizontal">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.MaMonHoc, htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.DisplayFor(model => model.MaMonHoc, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TenMonHoc, htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.DisplayFor(model => model.TenMonHoc, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.SoTinChi, htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.DisplayFor(model => model.SoTinChi, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.LoaiMonHoc, "Loại môn học", htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.DropDownList("LoaiMonHoc", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End timeline body-->
                    </div>
                </li>
            </ul>
        </div>
        <!-- /.col -->
    </div>
</section>